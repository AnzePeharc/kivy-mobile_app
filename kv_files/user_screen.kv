<UserScreen>
    user_name: user_name
    BoxLayout:
        orientation: "vertical"

        BoxLayout:
            orientation: "vertical"
            size_hint: (1, 0.3)
            spacing: 10
            padding: 20
            canvas.before:
                Color:
                    rgba: utils.get_color_from_hex('#373737')
                Rectangle:
                    pos: self.pos
                    size: self.size


            MDIconButton:
                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex('#ffffff')
                user_font_size: "50sp"
                icon: "keyboard-backspace"
                size_hint: (0.1, 0.1)
                on_press: app.change_window("main_window", "right")

            MDLabel:
                id: user_name
                halign: "center"
                text: "ANZE PEHARC"
                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex('#ffffff')
                font_style: "H6"
                font_name: "JetBrainsMono"
                size_hint: (1, 0.3)

            MDIconButton:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#ffffff')
                    Rectangle:
                        pos: self.pos
                        size: self.size

                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex('#373737')
                size_hint: (0.3, 0.6)
                pos_hint: {"center_x": .5}
                user_font_size: "100sp"
                icon: "face-profile"


        BoxLayout:
            orientation: "vertical"
            spacing: 10
            padding: 20
            size_hint: (1, 0.7)
            MDList:
                size_hint: (1, 0.9)
                OneLineIconListItem:
                    text: "An≈æe Peharc"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#373737')
                    font_style: "H6"
                    font_name: "JetBrainsMono"

                    IconLeftWidget:
                        icon: "face"

                OneLineIconListItem:
                    text: "anze.peharc@gmail.com"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#373737')
                    font_style: "H6"
                    font_name: "JetBrainsMono"

                    IconLeftWidget:
                        icon: "gmail"

                OneLineIconListItem:
                    text: "+386 31 504 327"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#373737')
                    font_style: "H6"
                    font_name: "JetBrainsMono"

                    IconLeftWidget:
                        icon: "cellphone"

                OneLineIconListItem:
                    text: "Password"
                    theme_text_color: "Custom"
                    text_color: utils.get_color_from_hex('#373737')
                    font_style: "H6"
                    font_name: "JetBrainsMono"
                    password: True

                    IconLeftWidget:
                        icon: "account-key"


            MDFlatButton:
                canvas.before:
                    Color:
                        rgba: utils.get_color_from_hex('#373737')
                    Rectangle:
                        pos: self.pos
                        size: self.size
                theme_text_color: "Custom"
                text_color: utils.get_color_from_hex('#ffffff')
                font_style: "H6"
                font_name: "JetBrainsMono"
                text: "Edit Profile"
                size_hint: (0.3, 0.1)
                pos_hint: {"center_x": .5}
