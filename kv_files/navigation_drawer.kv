<ItemDrawer>:
    bg_color: utils.get_color_from_hex('#373737')
    theme_text_color: "Custom"
    text_color: utils.get_color_from_hex('#ffffff')
    on_release: self.parent.set_color_item(self)

    IconLeftWidget:
        id: icon
        icon: root.icon
        theme_text_color: "Custom"
        text_color: utils.get_color_from_hex('#ffffff')


<ContentNavigationDrawer>:
    orientation: "vertical"
    padding: "8dp"
    spacing: "8dp"
    user_name: user_name

    AnchorLayout:
        anchor_x: "left"
        size_hint_y: None
        height: avatar.height

        MDIconButton:
            id: avatar
            size_hint: None, None
            size: "56dp", "56dp"
            icon: "assets/IMG_2865.png"
            on_press: root.navigate_to_user_screen()

    MDLabel:
        id: user_name
        background_color: utils.get_color_from_hex('#373737')
        text: "Anze Peharc"
        font_style: "Button"
        size_hint_y: None
        height: self.texture_size[1]

    MDLabel:
        text: "anze.peharc@gmail.com"
        font_style: "Caption"
        size_hint_y: None
        height: self.texture_size[1]

    ScrollView:

        DrawerList:
            id: md_list
